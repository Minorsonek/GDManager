<local:BasePage x:Class="GDManager.AboutPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GDManager"
             xmlns:core="clr-namespace:GDManager.Core;assembly=GDManager.Core"
             mc:Ignorable="d">
    
    <Border Background="{StaticResource WhiteLightBrush}"
            Padding="60">

        <StackPanel>
            
            <TextBlock Text="Fully made by Minorsonek."
                       TextWrapping="WrapWithOverflow"
                       Style="{StaticResource QuestionTextBlockStyle}" />

            <TextBlock Text="Application website: gdmanager.minorsonek.pl"
                       TextWrapping="WrapWithOverflow"
                       Style="{StaticResource QuestionTextBlockStyle}" />

            <TextBlock Text="Application is opensource, github:"
                       Style="{StaticResource QuestionTextBlockStyle}" />

            <TextBlock Text="https://github.com/Minorsonek/GDManager"
                       Style="{StaticResource QuestionTextBlockStyle}" />

        </StackPanel>
        
    </Border>
    
</local:BasePage>
